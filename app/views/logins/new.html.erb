<h1>ログイン</h1>

<% if flash[:alert] %>
  <p class="alert"><%= flash[:alert] %></p>
<% end %>

<%= form_with url: login_path, method: :post, local: true do |f| %>
  <div>
    <%= f.label :login_id, "ログインID" %>
    <%= f.text_field :login_id %>
  </div>

  <div>
    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password %>
  </div>

  <%= f.submit "ログイン" %>
<% end %>
