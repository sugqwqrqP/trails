<header>
  <div>
    <%= link_to "新幹線予約", root_path %>
  </div>

  <nav>
    <% if logged_in? %>
      <span>
        <%= link_to current_user.user_fullname, user_path(current_user) %>
      </span>
      |
      <%= link_to "ログアウト", login_path, method: :delete %>
    <% else %>
      <%= link_to "ログイン", new_login_path %>
      |
      <%= link_to "新規登録", new_user_path %>
    <% end %>
  </nav>
</header>
